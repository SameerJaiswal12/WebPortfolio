@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<!-- Page Header -->
<section class="page-header bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center" data-aos="fade-up">
                <h1 class="display-3 fw-bold mb-3">Get In Touch</h1>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <!-- Contact Information -->
            <div class="col-lg-8" data-aos="fade-up">
                <div class="contact-info p-4 rounded bg-dark border border-secondary">
                    <h2 class="h2 fw-bold text-white mb-4 text-center">Contact Information</h2>

                    <!-- Email -->
                    <div class="contact-item mb-4 d-flex align-items-center">
                        <i class="fas fa-envelope fa-2x text-primary me-3"></i>
                        <div class="contact-text flex-grow-1">
                            <h3 class="h6 fw-bold text-white mb-1">Email</h3>
                            <p class="text-muted mb-0">sameerjaiswal1203@gmail.com</p>
                        </div>
                        <a href="mailto:sameerjaiswal1203@gmail.com" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-envelope me-1"></i>Send Email
                        </a>
                    </div>

                    <!-- Location -->
                    <div class="contact-item d-flex align-items-center">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-3"></i>
                        <div class="contact-text">
                            <h3 class="h6 fw-bold text-white mb-1">Location</h3>
                            <p class="text-muted mb-1">Remote / Worldwide</p>
                            <p class="text-muted small mb-0">Available for freelance & collaboration</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Social Media Section -->
<section class="social-media-section py-5 bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5" data-aos="fade-up">
                <h2 class="display-5 fw-bold text-white mb-3">Connect With Me</h2>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="row g-4">
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                        <a href="https://www.linkedin.com/in/sameer-jaiswal-66900037a" target="_blank" class="social-card text-decoration-none">
                            <div class="card bg-dark border-primary h-100 text-center">
                                <div class="card-body p-4">
                                    <i class="fab fa-linkedin fa-3x text-primary mb-3"></i>
                                    <h3 class="h5 fw-bold text-white mb-2">LinkedIn</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                        <a href="https://www.instagram.com/sam._.sj_?igsh=Z2VyNHRjamgyd2w2" target="_blank" class="social-card text-decoration-none">
                            <div class="card bg-dark border-danger h-100 text-center">
                                <div class="card-body p-4">
                                    <i class="fab fa-instagram fa-3x text-danger mb-3"></i>
                                    <h3 class="h5 fw-bold text-white mb-2">Instagram</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                        <a href="https://github.com/SameerJaiswal12" target="_blank" class="social-card text-decoration-none">
                            <div class="card bg-dark border-secondary h-100 text-center">
                                <div class="card-body p-4">
                                    <i class="fab fa-github fa-3x text-secondary mb-3"></i>
                                    <h3 class="h5 fw-bold text-white mb-2">GitHub</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });

        // Social card hover effects
        document.querySelectorAll('.social-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
}
