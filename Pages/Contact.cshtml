@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<!-- Page Header -->
<section class="page-header bg-dark text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center" data-aos="fade-up">
                <h1 class="display-3 fw-bold mb-3">Get In Touch</h1>
                <p class="lead text-muted">Ready to start your next game project? Let's talk!</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section py-5">
    <div class="container">
        <div class="row">
            <!-- Contact Form -->
            <div class="col-lg-8 mb-5 mb-lg-0" data-aos="fade-right">
                <div class="contact-form-wrapper">
                    <h2 class="h2 fw-bold text-white mb-4">Send Me a Message</h2>
                    
                    @if (Model.MessageSent)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            Thank you for your message! I'll get back to you soon.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form method="post" class="contact-form">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Name" class="form-label text-white">Name *</label>
                                <input type="text" class="form-control @(Model.ModelState["Name"]?.Errors.Any() == true ? "is-invalid" : "")" 
                                       id="Name" name="ContactForm.Name" value="@Model.ContactForm?.Name" required>
                                @if (Model.ModelState["Name"]?.Errors.Any() == true)
                                {
                                    <div class="invalid-feedback">
                                        @Model.ModelState["Name"].Errors.First().ErrorMessage
                                    </div>
                                }
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label text-white">Email *</label>
                                <input type="email" class="form-control @(Model.ModelState["Email"]?.Errors.Any() == true ? "is-invalid" : "")" 
                                       id="Email" name="ContactForm.Email" value="@Model.ContactForm?.Email" required>
                                @if (Model.ModelState["Email"]?.Errors.Any() == true)
                                {
                                    <div class="invalid-feedback">
                                        @Model.ModelState["Email"].Errors.First().ErrorMessage
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="Message" class="form-label text-white">Message *</label>
                            <textarea class="form-control @(Model.ModelState["Message"]?.Errors.Any() == true ? "is-invalid" : "")" 
                                      id="Message" name="ContactForm.Message" rows="6" required>@Model.ContactForm?.Message</textarea>
                            @if (Model.ModelState["Message"]?.Errors.Any() == true)
                            {
                                <div class="invalid-feedback">
                                    @Model.ModelState["Message"].Errors.First().ErrorMessage
                                </div>
                            }
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Send Message
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Contact Information -->
            <div class="col-lg-4" data-aos="fade-left">
                <div class="contact-info">
                    <h2 class="h2 fw-bold text-white mb-4">Contact Information</h2>
                    
                    <div class="contact-item mb-4">
                        <div class="contact-icon mb-2">
                            <i class="fas fa-envelope fa-2x text-primary"></i>
                        </div>
                        <h3 class="h6 fw-bold text-white mb-2">Email</h3>
                        <p class="text-muted mb-0">sameerjaiswal1203@gmail.com</p>
                        <a href="mailto:sameerjaiswal1203@gmail.com" class="btn btn-outline-primary btn-sm mt-2">
                            <i class="fas fa-envelope me-1"></i>Send Email
                        </a>
                    </div>
                    
                    <div class="contact-item mb-4">
                        <div class="contact-icon mb-2">
                            <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                        </div>
                        <h3 class="h6 fw-bold text-white mb-2">Location</h3>
                        <p class="text-muted mb-0">Remote / Worldwide</p>
                        <p class="text-muted small">Available for remote collaboration and freelance work</p>
                    </div>
                    
                    <div class="contact-item mb-4">
                        <div class="contact-icon mb-2">
                            <i class="fas fa-clock fa-2x text-primary"></i>
                        </div>
                        <h3 class="h6 fw-bold text-white mb-2">Response Time</h3>
                        <p class="text-muted mb-0">Within 24 hours</p>
                        <p class="text-muted small">I typically respond to all inquiries within one business day</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

