    </div>
</section>

<!-- Back to Projects Button -->
<section class="back-to-projects py-4">
    <div class="container text-center">
        <a href="/Projects" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-arrow-left me-2"></i>Back to Projects
        </a>
    </div>
</section>
